{
    "$schema": "http://json-schema.org/draft-07/schema#", 
    "$id": "ServiceRef.schema.json", 
    "title": "ServiceRef", 
    "definitions": {
        "ServiceRef": {
            "type": "object", 
            "description": "Service references", 
            "properties": {
                "href": {
                    "type": "string", 
                    "description": "Reference of the service"
                }, 
                "id": {
                    "type": "string", 
                    "description": "Unique identifier of the service"
                }
